<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="LAYOUTS ANIDADOS"
        android:textColor="#ff0000"
        android:textSize="22dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_weight="1"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <Button
            android:text="BOTÓN1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </Button>
        <Button
            android:text="BOTÓN2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </Button>
        <Button
            android:text="BOTÓN3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <Button
            android:text="BOTÓN4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </Button>
        <Button
            android:text="BOTÓN5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="6">
        </Button>
        <Button
            android:text="BOTÓN6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </Button>
    </LinearLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="BOTONES EN LAYOUT VERTICAL"
        android:textColor="#0000ff"
        android:textSize="18dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_weight="1"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <Button
            android:text="BOTÓN7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </Button>
        <Button
            android:text="BOTÓN8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3">
        </Button>
        <Button
            android:text="BOTÓN9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </Button>
    </LinearLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="BOTONES EN LAYOUT HORIZONTAL"
        android:textColor="#0000ff"
        android:textSize="18dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_weight="1"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="25">
        <Button
            android:text="BOTÓN10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="4">
        </Button>
        <Button
            android:text="BOTÓN11"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">
        </Button>
        <Button
            android:text="BOTÓN12"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="4">
        </Button>
    </LinearLayout>
</LinearLayout>